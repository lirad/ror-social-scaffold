<% @users_unrequested.each do |user| %>
<li>
  Name: <%= user.name %>
  
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
    <%= button_to  "Invite to friendship", friendships_path, 
      params: { :friendship => { :friend_id=> user.id, :status => false}}, 
    method: :post %>
  </span>
</li>

<% end %>